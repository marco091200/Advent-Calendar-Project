<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Hintergrundbild -->
    <ImageView
        android:id="@+id/adventskalender_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/background"
        android:scaleType="centerCrop"
        android:src="@drawable/hintergrund_adventskalender"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Headline-Text -->
    <TextView
        android:id="@+id/leer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/libre_baskerville"
        android:textColor="@color/beige"
        android:textSize="35sp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="32dp" />

    <!-- Beschreibungstext -->
    <TextView
        android:id="@+id/leer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/libre_baskerville"
        android:textColor="@color/beige"
        android:textSize="20sp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:maxLines="10"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/star"
        app:layout_constraintBottom_toTopOf="@id/adventskalender_snowman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- Schneemann -->

    <!-- Stern -->
    <ImageView
        android:id="@+id/adventskalender_snowman"
        android:layout_width="151dp"
        android:layout_height="162dp"
        android:contentDescription="@string/snowman"
        android:scaleType="centerCrop"
        android:src="@drawable/snowman"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919" />

    <TextView
        android:id="@+id/star"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/star_shape"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="22sp"
        android:fontFamily="@font/libre_baskerville"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
